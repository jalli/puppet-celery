# Puppet template for sudoers.d file
# Allow admin users to stop/start celery service without password

# Cmnd alias specification
Cmnd_Alias CELERYD_MULTI = <%= @celeryd_multi_binary %>
Cmnd_Alias CELERY = <%= @celery_binary %>

Runas_Alias CELERY_USER = <%= @broker_user %>

# User privilege specification
#<%= @admin_user %>  ALL=(CELERY_USER)NOPASSWD: CELERYD_MULTI
#<%= @admin_user %>  ALL=(CELERY_USER)NOPASSWD: CELERY
<%= @admin_user %>  ALL=(root)NOPASSWD: CELERYD_MULTI
<%= @admin_user %>  ALL=(root)NOPASSWD: CELERY
